<div class="row">
   <div class="col-md-offset-1 col-md-10">
      <%= form_for(@experiment, html: { class: "form-horizontal", role: "form" }) do |f| %>
         <%= render 'shared/error_messages', object: f.object %>

         <div class="form-group">
            <%= f.label :experiment_at, class: "control-label col-md-2" %>
            <div class="col-md-8">
               <%= f.text_field :experiment_at, class: "form-control" %>
            </div>
         </div>
         <div class="form-group">
            <%= f.label :ruby_type, class: "control-label col-md-2" %>
            <div class="col-md-8">
               <%= f.text_field :ruby_type, class: "form-control" %>
            </div>
         </div>
         <div class="form-group">
            <%= f.label :note, class: "control-label col-md-2" %>
            <div class="col-md-8">
               <%= f.text_area :note, class: "form-control" %>
            </div>
         </div>
         <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
               <%= f.file_field :dstat_data %>
            </div>
         </div>
         <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
               <%= f.submit class: "btn btn-primary" %>
            </div>
         </div>
      <% end %>
   </div>
</div>
