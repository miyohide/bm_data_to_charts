<div class="row">
   <div class="col-md-offset-1 col-md-10">
      <h1>Listing experiments</h1>

      <table class="table table-bordered table-hover">
         <thead>
            <tr>
               <th>Experiment at</th>
               <th>Ruby type</th>
               <th>Note</th>
               <th colspan="3"></th>
            </tr>
         </thead>

         <tbody>
            <% @experiments.each do |experiment| %>
               <tr>
                  <td><%= experiment.experiment_at %></td>
                  <td><%= experiment.ruby_type %></td>
                  <td><%= experiment.note %></td>
                  <td><%= link_to 'Show', experiment, class: "btn btn-primary" %></td>
                  <td><%= link_to 'Edit', edit_experiment_path(experiment), class: "btn btn-primary" %></td>
                  <td><%= link_to 'Destroy', experiment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
               </tr>
            <% end %>
         </tbody>
      </table>

      <br>

      <%= link_to 'New Experiment', new_experiment_path, class: "btn btn-primary" %>
   </div>
</div>
